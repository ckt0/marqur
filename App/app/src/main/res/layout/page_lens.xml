<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lens_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.marqur.android.MainActivity">

    <LinearLayout
        android:id="@+id/lens_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/quantum_black_100">

        <include layout="@layout/camera_loader" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/lens_ar_canvas"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center"
        android:orientation="horizontal"
        style="?android:attr/buttonBarStyle">

        <Button
            android:id="@+id/lens_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="@string/app_name"
            style="?android:attr/buttonBarButtonStyle"/>

        <Button
            android:id="@+id/lens_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:textSize="15sp"
            android:text="@string/app_name"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>


</RelativeLayout>